# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=portfolio_db

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=openai/gpt-4o-mini

# JWT Configuration
JWT_SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=1

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME=Portfolio Team

# Contact Email Recipients
CONTACT_EMAIL_JONATHAN=jonathan@example.com
CONTACT_EMAIL_PABLO=pablo@example.com

# Rate Limits
RATE_LIMIT_CHAT_MESSAGES=10
RATE_LIMIT_EMAILS=2

# Logging
LOG_DIR=logs
LOG_LEVEL=INFO

# Application
APP_NAME=Portfolio Backend
APP_VERSION=1.0.0
DEBUG=False
